<h1>Books</h1>

<table>
  <tr>
    <th>Book ID</th>
    <th>Title</th>
    <th>Genre</th>
    <th>Cost Price</th>
    <th>Selling Price</th>
    <th>Stock Level</th>
    <th>Markup</th>
    <!-- <th>Publisher ID</th>
    <th>Publisher Name</th> -->
  </tr>

  <% for book in @books %>
  <tr>
    <td><%=book.id%></td>
    <td> <%=book.name%></td>
    <td><%=book.genre%></td>
    <td><%=book.cost_price%></td>
    <td><%=book.selling_price%></td>
    <td><%=book.stock_level%></td>
    <td><%=book.stock_condition%></td>
    <!-- <td></td> -->
    <!-- <td></td>
    <td></td> -->
  </tr>
  <% end %>
</table>
<a href="/books/<%=book.id%>">Edit</a>
<a href="/books/new">New Book</a>
